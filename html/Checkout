<script type="text/javascript">
    $(document).ready(function(){
        $("select").change(function(){
            $(this).find("option:selected").each(function(){
                var optionValue = $(this).attr("value");
                if(optionValue){
                    $(".box").not("." + optionValue).hide();
                    $("." + optionValue).show();
                } else{
                    $(".box").hide();
                }
            });
        }).change();
    });
</script>
<script type="text/javascript">
function isNumber(evt) {
evt = (evt) ? evt : window.event;
var charCode = (evt.which) ? evt.which : evt.keyCode;
if (charCode > 31 && (charCode < 48 || charCode > 57)) {
return false;
}
return true;
}
</script>
<script type="text/javascript">

    //make shipping info disappear if shipping is same as billing
    $(document).ready(function() {
        $('#sameShipping').change(function() {
            $('#shippingInfo').toggle();
        });
    });
    </script>

<script type="text/javascript">

    }
    function validateForm() {

       //customer information validation

        var a=document.forms["myForm"]["firstName"].value;
        if (a==null || a=="")
        {
            alert("Make sure all fields are complete");
            return false;
        }

        var b=document.forms["myForm"]["lastName"].value;
        if (b==null || b=="") {
            alert("Make sure all fields are complete");
            return false;
        }
        var c=document.forms["myForm"]["phoneNumber"].value;
        if (c==null || c=="") {
            alert("Make sure all fields are complete");
            return false;
        }
        var d=document.forms["myForm"]["email"].value;
        if (d==null || d=="") {
            alert("Make sure all fields are complete");
            return false;
        }

       //billing information validation
        var e=document.forms["myForm"]["firstNameBI"].value;
        if (e==null || e=="") {
            alert("Make sure all fields are complete");
            return false;
        }
        var f=document.forms["myForm"]["lastNameBI"].value;
        if (f==null || f=="") {
            alert("Make sure all fields are complete");
            return false;
        }
        var g=document.forms["myForm"]["street"].value;
        if (g==null || g=="") {
            alert("Make sure all fields are complete");
            return false;
        }
        var h=document.forms["myForm"]["city"].value;
        if (h==null || h=="") {
            alert("Make sure all fields are complete");
            return false;
        }
        var i=document.forms["myForm"]["postalCode"].value;
        if (i==null || i=="") {
            alert("Make sure all fields are complete");
            return false;
        }
        var j=document.forms["myForm"]["cardNumber"].value;
        if (j == null || j == "" || j.length < 16 || j.length > 16) {
                    alert("Make sure all fields are complete");
                    return false;
                }


        var k=document.forms["myForm"]["securityCode"].value;
        if (k==null || k=="" || k.length < 3 || k.length > 3 || k != "777" ) {
            alert("Make sure all fields are complete");
            return false;
        }

        var l= document.forms["myForm"]["password1"].value;
        if (l==null || l=="" || l != "123456789" ) {
            alert("Make sure all fields are complete");
            return false;
        }
        var m= document.forms["myForm"]["password1"].value;
        if (m==null || m=="" || m != "123456789" ) {
            alert("Make sure all fields are complete");
            return false;
        }

        function pay(form) {
            var element = document.getElementById('username');
            if(val== "--Select--"){
                element.style.display='block';
            }
            else
                element.style.display='none';

        }



       //shipping field validation

    }



